<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap');
    * {

      margin: 0px;
      padding: 0px;
      box-sizing: border-box;
      outline: 0;
    }
    body {
      display: flex;
      flex:1;
      flex-direction: column;
      background: #fff;
      text-rendering: optimizeLegibility !important;
      font-family: 'Roboto' sans-serif;
      margin-left: 24px;
      margin-right: 24px;
    }

    div.container {
      display: flex;
      flex-direction: column;
      flex: 1;
      justify-content: space-between;
    }

    div.header{
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      align-items: center;
      margin-bottom: 24px;
      margin-top: 14px;
    }

    div.isDigital{
      width: 110px;
      height: 45px;
      border-style: solid;
      border-width: 1px;
      border-color: black;
    }

    div.isBox{
      width: 100px;
      height: 60px;
    }

    div.row{
      display: flex;
      /* flex:1; */
      width: 75%;
      flex-direction: row;
      margin-top: 7px;
      margin-bottom: 4px;
    }

    div.rowDescr{
     margin-bottom: 7px;
    }

    div.footer{
      display: flex;
      flex-direction: column;
      padding: 22px;
      /* background: #eee; */
      /* font-weight: bold; */
      /*position: absolute;*/
      /* bottom: 0;
      width: 95%;
      /* margin-left: 24px; */
      /* margin-right: 24px;*/
    }

    p.isBackColor{
      display: flex;
      flex-direction: row;
      flex: 1;
      margin-left: 20px;
      padding-left: 7px;
      background-color: #e5e5e5;
    }

    p.topo{
      margin-top: 14px;
      }

    div.isAssignature{
      width: 350px;
      height: 60px;
      border-style: solid;
      border-width: 1px;
      border-color: black;
    }

    p.label{
      align-self: center;
      font-size:8px;
      font-style: normal;
    }

    p.title{
      display: flex;
      align-self: center;
      font-size: 12px;
      font-weight: bold;
    }

    div.colCenter{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  </style>
  <body>
      <!-- Header -->
      <div class="header">
        <span></span>
        <h1>Receituario simple</h1>
        <div class="isDigital">
          <span>Via Digital
            <a href="https://assinaturadigital.iti.gov.br/">
              Validar no site:</a>
          </span>
        </div>
      </div>

      <!-- Container -->
      <div class="container">
        <div class="row">
          <strong><label>Paciente:</label></strong>
          <label class="isBackColor"><%= patient; %></label>
        </div>
        <div class="row">
          <strong><p class="topo">Prescricao:</p></strong><p></p>
        </div>

        <!-- Itens -->
        <div style="background-color: #eee;">
        <% for(var i = 0; i < itens.length; i++){ %>
          <div class="row">
            <strong><label><%= itens[i].id %>:<%= itens[i].descr%></label></strong>
            <label><%= itens[i].qtd%></label>
          </div>
          <div class="rowDescr">
            <p><%= itens[i].information %></p>
           </div>
           <hr>
        <% } %>
      </div>

      <!-- Footer -->
      <div class="footer">
        <div class="row">
          <p class="title">Medico:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= doctorName%>
            </span>
              CRM:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= crm; %>
            </span>
            UF:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= doctorState; %>
            </span>
          </p>
        </div>

        <div class="row">
          <p class="title">Local de Atendimento:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= hospitalName; %>
            </span>
            CNES:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= cnes; %>
            </span>
          </p>
        </div>
        <div class="row">
          <p class="title">
            Endereco:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= address; %>
            </span>
            Bairro:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= neighboor; %>
            </span>
          </p>
        </div>
        <div class="row">
          <p class="title">Cidade:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= city; %>
            </span>
          UF:
          <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
            <%= state; %>
          </span>
          Telefone:
          <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
           <%= phone; %>
          </span>
          </p>
        </div>
        <div class="row">
          <p class="title">Data de Emissao:
            <span class="rowSpan" style="text-align:start; display: flex;width: 100%;background-color:#e5e5e5">
              <%= emission; %>
            </span>
          </p>
        </div>
        <div>
          <div class="colCenter">
            <div >
              <div class="isAssignature">
                <small>
                  <p>acrescentar a imagem</p>
                </small>
              </div>
            </div>
            <div>
              <p >Assinatura Medico(a)</p>
            </div>
          </div>
        </div>
        <div class="row">
          <small style="margin-top: 40px;">
            <p>Versao <%= version; %> | <%= month; %> <%= year; %></p>
          </small>
        </div>
      </div>
      <!-- End Footer -->
  </body>
</html>
